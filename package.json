{
  "name": "stereo-api",
  "version": "0.0.0",
  "description": "API backend for Stereo",
  "repository": "https://github.com/hoangvvo/stereo-api.git",
  "author": "Hoang Vo (https://hoangvvo.com/)",
  "license": "AGPL-3.0",
  "scripts": {
    "start": "node dist/server",
    "clean": "npx rimraf dist",
    "build:ts": "tsc",
    "build:copy": "npx cpy ./*/*.graphql --parents --cwd=src/graphql ../../dist/graphql",
    "build": "npm run codegen && npm run build:ts && npm run build:copy",
    "dev": "tsnd -r dotenv/config --respawn --transpile-only src/server",
    "codegen": "graphql-codegen",
    "lint": "eslint ./ --ext js,ts,tsx --ignore-path .gitignore"
  },
  "dependencies": {
    "@benzene/http": "^0.0.3",
    "@benzene/ws": "^0.4.4",
    "@graphql-tools/load-files": "^6.2.5",
    "@graphql-tools/merge": "^6.2.7",
    "@graphql-tools/schema": "^7.1.3",
    "@sentry/node": "^6.1.0",
    "cloudinary": "^1.24.0",
    "cookie": "^0.4.1",
    "cors": "^2.8.5",
    "dataloader": "^2.0.0",
    "fast-json-stringify": "^2.4.1",
    "googleapis": "^67.0.0",
    "graphql": "^15.5.0",
    "graphql-scalars": "^1.7.0",
    "graphql-upload": "^11.0.0",
    "ioredis": "^4.22.0",
    "jose": "^3.7.0",
    "mongodb": "^3.6.4",
    "nanoid": "^3.1.20",
    "next-connect": "^0.10.0",
    "node-fetch": "^2.6.1",
    "slug": "^4.0.2",
    "ws": "^7.4.3"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^1.20.1",
    "@graphql-codegen/typescript": "^1.21.0",
    "@graphql-codegen/typescript-resolvers": "^1.18.2",
    "@types/cookie": "^0.4.0",
    "@types/cors": "^2.8.10",
    "@types/ioredis": "^4.19.4",
    "@types/mongodb": "^3.6.7",
    "@types/node": "^14.14.27",
    "@types/node-fetch": "^2.5.8",
    "@types/pino": "^6.3.5",
    "@types/slug": "^0.9.1",
    "@types/spotify-api": "^0.0.7",
    "@types/ws": "^7.4.0",
    "@typescript-eslint/eslint-plugin": "^4.15.0",
    "@typescript-eslint/parser": "^4.15.0",
    "cpy-cli": "^3.1.1",
    "dotenv": "^8.2.0",
    "eslint": "^7.20.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-prettier": "^3.3.1",
    "prettier": "^2.2.1",
    "ts-node-dev": "1.1.1",
    "typescript": "^4.1.5"
  },
  "engines": {
    "node": "^14.0.0 || ^15.0.0"
  },
  "private": true
}
